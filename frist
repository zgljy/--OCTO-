</html>
<script>
	$(".box").mouseover(function(){
	$(this).animate({left:"500px",bottom:"300px",width:"200px"},2000,function(){
		$(this).animate({left:"0px",bottom:"0px",width:"100px;"},100)
	});
     });
</script>
